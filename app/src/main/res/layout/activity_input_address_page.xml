<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.jimmyoungyi.smartgarage.input_address_page">

    <EditText
        android:id="@+id/input_address_page_name_text"
        android:hint="@string/input_address_page_address_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/input_address_page_set_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_address_page_sent_button"/>

</LinearLayout>
